<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://kefir-bb.sourceforge.net/schemas"
               xsi:schemaLocation="http://kefir-bb.sourceforge.net/schemas http://kefir-bb.sourceforge.net/schemas/kefir-bb-0.7.xsd">
    <code>
        <pattern>{<var scope="list"/>}</pattern>
        <template>&lt;ul&gt;<var/>&lt;/ul&gt;</template>
    </code>
    <scope name="list">
        <code>
            <pattern>*<var scope="inner"/></pattern>
            <template>&lt;li&gt;<var/>&lt;/li&gt;</template>
        </code>
    </scope>
    <scope name="inner" parent="list">
        <code priority="1">
            <pattern>*<var scope="inner"/></pattern>
            <template>&lt;/li&gt;&lt;li&gt;<var/></template>
        </code>
    </scope>
</configuration>