<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://kefirsf.org/kefirbb/schema"
               xsi:schemaLocation="http://kefirsf.org/kefirbb/schema http://kefirsf.org/kefirbb/schema/kefirbb-1.0.xsd">
    <code priority="3">
        <pattern>[<var name="val" parse="false"/>]<var name="text"/>[/]</pattern>
        <template><var name="text"/></template>
    </code>
    <code priority="2">
        <pattern>(<var name="val" parse="false"/>)<var name="text"/>(/)</pattern>
        <template><var name="text"/></template>
    </code>
    <code priority="1">
        <pattern>(<var name="any" parse="false"/>)</pattern>
        <template><var name="val"/></template>
    </code>
</configuration>